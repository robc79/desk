@page
@model Desk.WebUI.Pages.Tags.ListModel
@{
    ViewData["Title"] = "Tags";
}

<h1>Tags</h1>

Jump to: <a href="#addTagHeader">Add</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model.Tags)
        {
            <tr>
                <td>@tag.Name</td>
                <td>
                    <a asp-page="/Tags/Delete" asp-route-tagId="@tag.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="card mb-3 col-lg-6">
    <div class="card-body">
        <div class="card-title">
            <h4 id="addTagHeader">Add Tag</h4>
        </div>
        <div class="card-text">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Form.Name" class="form-label"></label>
                    <input asp-for="Form.Name" class="form-control" />
                    <span asp-validation-for="Form.Name" class="text-danger"></span>
                </div>
                <input type="submit" value="Add" />
            </form>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}