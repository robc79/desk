@page
@model Desk.WebUI.Pages.Items.UploadModel
@{
    ViewData["Title"] = "Upload Image";
}

<div class="text-center">
    <h1 class="display-4">Upload Image for - @Model.SummaryItem!.Name</h1>
</div>

<div class="row">
    <div class="col-2"></div>
    
    <div class="card mb-3 col-lg-8 justify-content-center">
        <div class="card-body">
            <div class="card-text">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="Form.ImageUpload" class="form-label">Image (1MB size max)</label>
                        <input asp-for="Form.ImageUpload" class="form-control" accept=".jpg, .jpeg" />
                        <span asp-validation-for="Form.ImageUpload" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Upload" />
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-2"></div>
</div>